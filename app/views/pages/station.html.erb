          <%= render :partial => 'arrivals_list', :locals => { :directionArrivals => @dir5Arrivals } %>
        </div>
      </div>
    </div>
    <div class="time-refresh-content"><%= render :partial => 'time_refresh' %></div>
  </div>
</section>
